{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    // "outDir": "./build",

    "module": "es2022",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noEmit": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules"]
}